	],
	"repository": {
		"common": {
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#brackets"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.tododown",
					"match": "(\"[^\"]*\"|'[^']*'|`[^`]*`)"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.tododown",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"brackets": {
			"patterns": [
				{
					"name": "meta.brackets.square.tododown",
					"match": "\\[[^\\]]*\\]"
				}
			]
		}
	}
}